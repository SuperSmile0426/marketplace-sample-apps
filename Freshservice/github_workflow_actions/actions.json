{
  "inviteUser" : {
   "display_name" : "Invite User to Organisation",
   "parameters" : {
     "$schema": "http://json-schema.org/draft-04/schema#",
     "type": "object",
     "properties": {
        "user_github_handle": {
          "type": "string"
        },
        "user_role": {
          "type": "string"
        }
      },
      "required": [
        "user_github_handle",
        "user_role"
      ]
    },
   "description": "Send an email invitation to the user to join the organisation"
 },
 "deleteUser" : {
   "display_name" : "Deletes User from Organisation",
   "parameters" : {
     "$schema": "http://json-schema.org/draft-04/schema#",
     "type": "object",
     "properties": {
       "user_github_handle": {
         "type": "string"
       }
     },
     "required": [
       "user_github_handle"
     ]
   },
   "description": "Removes the user from the organisation"
 }
}
