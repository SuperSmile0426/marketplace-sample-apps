{
    "status_page_host": {
        "display_name": "Status Page Host",
        "description": "Enter the status page host. Ex: example.statuspage.io. No need to append https://",
        "type": "text",
        "required": true
    },
    "status_page_api_key": {
        "display_name": "Status Page API Key",
        "description": "Enter the status page user API Key.",
        "type": "text",
        "required": true,
        "secure": true
    },
    "status_page_poll_frequency": {
        "display_name": "Poll Frequency in seconds",
        "description": "Should be greater than 30 sec",
        "type": "number",
        "default_value":30,
        "required": true,
        "regex": {
            "regex1": "^([3-9]\\d|[1-9]\\d{2,})$",
            "regex1-error": "Poll frequency should be greater than 30 seconds"
      }
    }
}